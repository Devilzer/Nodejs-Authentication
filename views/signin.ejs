<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/signin.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Sign In</title>
</head>
<body>
    <div class="form-structor">
        <div class="signup">
            <h2 class="form-title" id="signup"><span>or</span>Sign up</h2>
            <div class="form-holder">
                <form action="/signup" method="POST">
                    <input type="text" name="username" class="input" placeholder="Name" required/>
                    <input type="email" name="email" class="input" placeholder="Email" required/>
                    <input type="password" name="password" class="input" placeholder="Password" required/>
                    <button type="submit" class="submit-btn">Sign up</button>
                </form>
                
            </div>
        </div>
        <div class="login slide-up">
            <div class="center">
                <h2 class="form-title" id="login"><span>or</span>Log in</h2>
                <div class="form-holder">
                    <form action="/signin" method="POST">
                        <input type="email" name="email" class="input" placeholder="Email" required/>
                        <input type="password" name="password" class="input" placeholder="Password" required/>
                        <button type="submit" class="submit-btn">Log in</button>
                    </form>  
                </div>
                <a href="/forgotpswd">Forgot Password?</a>
                <div class="social">
                    <a href="/auth/facebook/">
                        <div id="facebook" class="sbtn"></div>
                    </a>
                    <a href="/auth/google/">
                        <div id="google" class="sbtn"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/signin.js"></script>
    <script>
        <% if(flash.success && flash.success.length>0){%>
          new Noty({
            theme:'metroui',
            text:"<%= flash.success%>",
            type: 'success',
            layout:'topRight',
            timeout: 750
          }).show();
      <% } %>
      <% if(flash.error && flash.error.length>0){%>
          new Noty({
            theme:'metroui',
            text:"<%= flash.error%>",
            type: 'error',
            layout:'topRight',
            timeout: 750
          }).show();
      <% } %>
      <% if(flash.warning && flash.warning.length>0){%>
          new Noty({
            theme:'metroui',
            text:"<%= flash.warning%>",
            type: 'warning',
            layout:'topRight',
            timeout: 750
          }).show();
      <% } %>
      <% if(flash.info && flash.info.length>0){%>
          new Noty({
            theme:'metroui',
            text:"<%= flash.info%>",
            type: 'info',
            layout:'topRight',
            timeout: 750
          }).show();
      <% } %>
    </script>
</body>
</html>